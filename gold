want=$Dir/README.md
[ -f "$want" ] || cat<<'EOF'>$want
<a name=top>Header<br>
<p align=center>README</p>
<hr>

EOF

want=$Dir/.travis.yml
[ -f "$want" ] || cat<<'EOF'>$want
language: C

sudo: true

install:
  - wget -O gawk.tar.gz https://ftp.gnu.org/gnu/gawk/gawk-5.1.0.tar.gz
  - tar xzf gawk.tar.gz
  - cd gawk-5.1.0
  - ./configure; sudo make; sudo make install
  - cd ..

script:
  - chmod +x gold
  - sh gold.sh --tests
EOF
	 
